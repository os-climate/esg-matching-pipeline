{
  "file_processing": {
    "file_path": "../../data/cleaned/wiki_cleaned.csv",
    "file_extension_pattern": "*.csv",
    "filename_pattern": "wiki_cleaned",
    "encoding": "utf-8",
    "separator": ",",
    "read_mode": "bulk-pd"
  },
  "data_source": {
    "name": "wiki",
    "table_name": "esg_wiki",
    "create_table": "True",
    "if_table_exists": "drop",
    "primary_keys": ["company_id"],
    "attributes": {
      "company_id":  ["company_id","int"],
      "short_name":  ["short_name", "str"],
      "company_name":  ["company_name", "str"],
      "country_short_name": ["country_short_name", "str"],
      "country_alpha2": ["country_alpha2", "str"],
      "lei_cleaned_id": ["lei_cleaned_id", "str"],
      "company_name_clean": ["company_name_clean", "str"]
    },
    "matching_role": "target",
    "matching_alias": {
      "LEI":  "lei_cleaned_id",
      "COMPANY": "company_name_clean",
      "COUNTRY": "country_alpha2",
      "COUNTRY_HQ": "country_alpha2",
      "COMPANY_OTHER_NAME1": "company_name_clean",
      "COMPANY_OTHER_NAME2": "company_name_clean",
      "COMPANY_OTHER_NAME3": "company_name_clean",
      "COMPANY_OTHER_NAME4": "company_name_clean",
      "COMPANY_OTHER_NAME5": "company_name_clean",
      "COMPANY_HQ_OTHER_NAME1": "company_name_clean",
      "COMPANY_HQ_OTHER_NAME2": "company_name_clean",
      "COMPANY_HQ_OTHER_NAME3": "company_name_clean",
      "COMPANY_HQ_OTHER_NAME4": "company_name_clean",
      "COMPANY_HQ_OTHER_NAME5": "company_name_clean"
    },
    "map_to_matching": {
      "tgt_id":  "company_id",
      "lei":  "lei_cleaned_id",
      "tgt_company": "company_name_clean",
      "tgt_original_company": "company_name",
      "tgt_country": "country_alpha2"
    }
  },
  "matching_policy": {
    "matching_with_ref": {
      "dfm": {
        "lei":  ["LEI"]
      } ,
      "drm": {
        "name+country":  ["COMPANY", "COUNTRY"],
        "other_name+country":  ["COMPANY_OTHER_NAME1", "COUNTRY"],
        "other_name+country":  ["COMPANY_OTHER_NAME2", "COUNTRY"],
        "other_name+country":  ["COMPANY_OTHER_NAME3", "COUNTRY"],
        "other_name+country":  ["COMPANY_OTHER_NAME4", "COUNTRY"],
        "other_name+country":  ["COMPANY_OTHER_NAME5", "COUNTRY"],
        "other_name_hq+country":  ["COMPANY_HQ_OTHER_NAME1", "COUNTRY_HQ"],
        "other_name_hq+country":  ["COMPANY_HQ_OTHER_NAME2", "COUNTRY_HQ"],
        "other_name_hq+country":  ["COMPANY_HQ_OTHER_NAME3", "COUNTRY_HQ"],
        "other_name_hq+country":  ["COMPANY_HQ_OTHER_NAME4", "COUNTRY_HQ"],
        "other_name_hq+country":  ["COMPANY_HQ_OTHER_NAME5", "COUNTRY_HQ"]
      },
      "irm": {
        "lei":  ["LEI"],
        "name+country":  ["COMPANY", "COUNTRY"]
      }
    }
  }
}
